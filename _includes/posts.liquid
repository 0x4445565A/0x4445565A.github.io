<div class="posts">
{% for post in collections.posts.pages %}
    {% if post.data.hide == false %}
<article>
    <a href="{{ post.permalink }}"><div class="post-image"><img src="{{ post.data.img }}"></div></a>
<div class="post-body">
    <a href="{{ post.permalink }}"><h2>{{ post.title }}</h2></a>
    <p class="post-tags">{{ post.data.tags }}</p>
    <p>{{ post.data.summary }}</p>
    <div class="post-link"><a href="{{ post.permalink }}">Read more...</a></div>
</div>
</article>
    {% endif %}
{% endfor %}
</div>